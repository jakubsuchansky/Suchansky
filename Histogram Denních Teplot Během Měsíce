import matplotlib.pyplot as plt

# Denní průměrné teploty (°C) během jednoho měsíce
# Data simulují reálný průběh počasí na jaře
daily_temperatures = [
    -2, -1, 0, 1, 2, 3, 4,
    3, 2, 1, 0, -1, 1, 2,
    3, 4, 5, 6, 7, 8,
    7, 6, 5, 4, 3, 2,
    1, 0, 2, 4
]

# Vytvoření histogramu
plt.figure()
plt.hist(daily_temperatures, bins=10)

# Popisky a nadpis
plt.title("Histogram Denních Teplot Během Měsíce")
plt.xlabel("Teplota (°C)")
plt.ylabel("Počet dní")

# Zobrazení grafu
plt.show()
